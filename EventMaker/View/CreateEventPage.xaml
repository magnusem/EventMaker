<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventMaker.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:EventMaker.ViewModel"
    x:Class="EventMaker.View.CreateEventPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="164,141,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="103" Height="16"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="590,323,0,0" TextWrapping="Wrap" Text="Place" VerticalAlignment="Top" Width="104" Height="16"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="590,144,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="104" Height="17"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="164,320,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="103" Height="16"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="164,190,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="71" Width="185"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Margin="590,190,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="71" Width="185"/>
        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Margin="164,369,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="72" Width="185"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Margin="590,369,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="72" Width="185"/>
        <DatePicker HorizontalAlignment="Left" Margin="873,190,0,0" VerticalAlignment="Top"/>
        <AppBarButton x:Name="appBarButton" HorizontalAlignment="Left" Icon="Accept" Label="Create Event" Margin="873,355,0,0" VerticalAlignment="Top" Height="90" Width="296" Command="{Binding CreateEventCommand, Mode=TwoWay}">
            <AppBarButton.DataContext>
                <ViewModel:EventViewModel/>
            </AppBarButton.DataContext>
        </AppBarButton>


    </Grid>
</Page>
